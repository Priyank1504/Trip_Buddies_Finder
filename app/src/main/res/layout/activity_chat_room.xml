<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/background"
    tools:context="com.example.priya.hw09.ChatRoomActivity">
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewName"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_height="40dp"
        android:src="@drawable/logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/imageViewLogout"
        android:layout_width="40dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/imageViewLogout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:id="@+id/ListViewMessages" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editTextMessage"
        android:hint="Type the message to Send" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/send"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/editTextMessage"
        android:layout_toEndOf="@+id/editTextMessage"
        android:layout_marginBottom="14dp"
        android:id="@+id/imageViewSend" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/gallery"
        android:layout_alignBottom="@+id/imageViewSend"
        android:layout_alignRight="@+id/imageViewLogout"
        android:layout_alignEnd="@+id/imageViewLogout"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:id="@+id/imageViewGallery" />


</RelativeLayout>
